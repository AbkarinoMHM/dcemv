<local:ModalPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DCEMV.DemoApp.TopUpView"
             xmlns:local="clr-namespace:DCEMV.DemoApp" 
                 xmlns:common="clr-namespace:DCEMV.TerminalCommon;assembly=DCEMV_TerminalCommon" 
             Title="Top-Up">

    <local:ModalPage.Resources>
        <ResourceDictionary>
            <Style x:Key="styleToggleButtonChecked"  TargetType="Button">
                <Setter Property="WidthRequest" Value="60"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="BackgroundColor" Value="DarkGray"/>
            </Style>
            <Style x:Key="styleToggleButton"  TargetType="Button">
                <Setter Property="WidthRequest" Value="60"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="BackgroundColor" Value="LightGray"/>
            </Style>
        </ResourceDictionary>
    </local:ModalPage.Resources>

    <local:ModalPage.Content>
        <Grid x:Name="gridMain" HorizontalOptions="FillAndExpand">
            
            <Grid Margin="50" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
               
                <common:EMVTxCtl x:Name="emvTxCtl" />

                <Grid x:Name="gridTransactSummary">
                   
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="lblStatusTopUp" Grid.ColumnSpan="3"/>
                    
                </Grid>
            </Grid>

            <common:WaitControl x:Name="gridProgress"/>

        </Grid>
    </local:ModalPage.Content>
</local:ModalPage>